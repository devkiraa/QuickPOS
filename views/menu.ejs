<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Menu - Canteen Order</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-50">
  <div class="max-w-sm mx-auto my-4 p-4 bg-white rounded-lg shadow">
    <h2 class="text-xl font-bold text-center text-green-700 mb-4">Select Your Items</h2>

    <!-- Menu Items Grid -->
    <div class="grid grid-cols-1 gap-4">
      <% foodItems.forEach(item => { %>
        <div class="border rounded p-4 flex flex-col">
          <img 
            src="<%= item.imageUrl %>" 
            alt="<%= item.name %>" 
            class="w-full h-28 object-cover rounded mb-2"
          >
          <div class="flex-grow">
            <h3 class="font-semibold text-base mb-1 text-green-800">
              <%= item.name %>
            </h3>
            <p class="text-gray-600 text-sm mb-2">
              ₹<%= item.price %>
            </p>
          </div>
          <div class="flex items-center gap-2 mt-2">
            <input
              type="number"
              id="qty_<%= item._id %>"
              min="1"
              value="1"
              class="w-16 border rounded px-2 py-1 text-center text-sm focus:outline-none focus:ring"
            >
            <button
              onclick="addToCart('<%= item._id %>', '<%= item.name %>', '<%= item.price %>')"
              class="bg-green-500 text-white text-xs px-3 py-1 rounded hover:bg-green-600 transition"
            >
              Add
            </button>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Cart Section -->
    <div class="mt-6 border-t pt-4">
      <h3 class="text-lg font-semibold text-green-700 mb-2">Your Cart</h3>
      <div id="cartItems" class="space-y-2"></div>
      <p class="font-semibold text-right mt-3">
        Total: ₹<span id="totalAmount">0.00</span>
      </p>
      <form id="placeOrderForm" action="/orders/place/<%= orderId %>" method="POST">
        <input type="hidden" name="items" id="itemsInput">
        <button
          type="submit"
          class="mt-4 w-full bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition disabled:opacity-50"
          id="placeOrderBtn"
          disabled
        >
          Place Order
        </button>
      </form>
    </div>
  </div>

  <script>
    const cart = {};
    const cartItemsDiv = document.getElementById('cartItems');
    const totalAmountEl = document.getElementById('totalAmount');
    const placeOrderBtn = document.getElementById('placeOrderBtn');
    const itemsInput = document.getElementById('itemsInput');

    function addToCart(id, name, price) {
      const qtyInput = document.getElementById(`qty_${id}`);
      const qty = parseInt(qtyInput.value);
      if (isNaN(qty) || qty <= 0) {
        return alert('Enter valid quantity');
      }
      if (cart[id]) {
        cart[id].quantity += qty;
      } else {
        cart[id] = { id, name, price, quantity: qty };
      }
      updateCartDisplay();
      qtyInput.value = 1;
    }

    function updateCartDisplay() {
      cartItemsDiv.innerHTML = "";
      let total = 0;
      for (const id in cart) {
        const item = cart[id];
        const itemTotal = item.price * item.quantity;
        total += itemTotal;
        const div = document.createElement('div');
        div.className = "flex justify-between items-center border-b pb-1";
        div.innerHTML = `
          <div>
            <p class="text-sm font-medium text-green-800">${item.name}</p>
            <p class="text-xs text-gray-500">
              Qty: ${item.quantity} | ₹${itemTotal.toFixed(2)}
            </p>
          </div>
          <div class="flex gap-1">
            <button
              onclick="changeQty('${id}', -1)"
              class="bg-gray-200 text-xs px-2 py-1 rounded"
            >
              -
            </button>
            <button
              onclick="changeQty('${id}', 1)"
              class="bg-gray-200 text-xs px-2 py-1 rounded"
            >
              +
            </button>
            <button
              onclick="removeItem('${id}')"
              class="bg-red-400 text-white text-xs px-2 py-1 rounded"
            >
              x
            </button>
          </div>
        `;
        cartItemsDiv.appendChild(div);
      }
      totalAmountEl.innerText = total.toFixed(2);
      itemsInput.value = JSON.stringify(Object.values(cart));
      placeOrderBtn.disabled = Object.keys(cart).length === 0;
    }

    function changeQty(id, delta) {
      if (cart[id]) {
        cart[id].quantity += delta;
        if (cart[id].quantity <= 0) {
          delete cart[id];
        }
        updateCartDisplay();
      }
    }

    function removeItem(id) {
      delete cart[id];
      updateCartDisplay();
    }
  </script>
</body>
</html>
