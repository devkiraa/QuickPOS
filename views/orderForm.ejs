<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Start Order - SAMSKRITI Canteen</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
    body {
      font-family: 'Inter', sans-serif;
      background-color: #ffffff;
    }
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fadeIn {
      animation: fadeIn 0.4s ease-out;
    }
  </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
  <div class="bg-white w-full max-w-sm rounded-lg px-6 py-8 animate-fadeIn">
    
    <!-- Brand Header -->
    <div class="text-center mb-6">
      <h1 class="text-xl font-bold text-green-500 tracking-wide">SAMSKRITI FOOD STALL</h1>
    </div>

    <!-- Heading -->
    <h2 class="text-2xl font-bold text-gray-800 mb-1 text-center">
      Start Your Order
    </h2>
    <p class="text-sm text-gray-500 mb-6 text-center">
      Enter your details to continue
    </p>

    <!-- Form -->
    <form id="orderForm" action="/orders/new" method="POST" class="space-y-4">
      
      <!-- Name -->
      <div>
        <label for="customerName" class="block text-gray-700 font-medium mb-1">Name:</label>
        <input
          type="text"
          id="customerName"
          name="customerName"
          required
          minlength="2"
          pattern="[A-Za-z\s]+"
          title="Please enter a valid name"
          class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300"
        />
      </div>

      <!-- Mobile -->
      <div>
        <label for="mobile" class="block text-gray-700 font-medium mb-1">Mobile Number:</label>
        <input
          type="tel"
          id="mobile"
          name="mobile"
          required
          pattern="\d{10}"
          maxlength="10"
          title="Enter a 10-digit mobile number"
          class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300"
        />
      </div>

      <!-- Submit Button with Tailwind Loader -->
      <button
        type="submit"
        id="submitBtn"
        class="w-full bg-green-500 text-white rounded py-2 font-semibold hover:bg-blue-700 transition flex items-center justify-center"
      >
        <span id="btnText">Next</span>
        <svg
          id="btnLoader"
          class="hidden ml-2 w-5 h-5 animate-spin text-white"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
        >
          <circle class="opacity-25" cx="12" cy="12" r="10"
            stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor"
            d="M4 12a8 8 0 018-8v4l3-3-3-3v4a8 8 0 11-8 8z"></path>
        </svg>
      </button>
    </form>
  </div>

  <script>
    document.getElementById("orderForm").addEventListener("submit", function (e) {
      const name = document.getElementById("customerName");
      const mobile = document.getElementById("mobile");

      const nameValid = /^[A-Za-z\s]{2,}$/.test(name.value);
      const mobileValid = /^\d{10}$/.test(mobile.value);

      if (!nameValid || !mobileValid) {
        e.preventDefault(); // stop form submission
        alert("Please enter a valid name and 10-digit mobile number.");
        return;
      }

      const submitBtn = document.getElementById("submitBtn");
      const btnText = document.getElementById("btnText");
      const btnLoader = document.getElementById("btnLoader");

      // Disable the button and show the loader
      submitBtn.disabled = true;
      btnText.textContent = "Processing...";
      btnLoader.classList.remove("hidden");
    });
  </script>
</body>
</html>
