<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Order Successful - Canteen POS</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
    body {
      font-family: 'Inter', sans-serif;
      background-color: #ffffff;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fadeIn {
      animation: fadeIn 0.4s ease-out;
    }
  </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4">
  <div id="successContainer" class="relative bg-white w-full max-w-sm rounded-lg shadow-lg px-6 py-8 text-center">
    <!-- Optional Close Button -->
    <button class="absolute top-4 left-4 text-gray-400 hover:text-gray-600 focus:outline-none" aria-label="Close">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
           viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Check Icon -->
    <div class="flex items-center justify-center mb-4 mt-2">
      <div class="bg-green-100 text-green-600 rounded-full p-2">
        <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
      </div>
    </div>

    <!-- Header Message: Changes based on order status -->
    <h1 id="headerMsg" class="text-2xl font-bold text-gray-800 mb-1 animate-fadeIn">
      <% if (order && order.status.toLowerCase() === "paid") { %>
        Payment Successful!
      <% } else { %>
        Order Placed Successfully
      <% } %>
    </h1>
    <p class="text-sm text-gray-500 mb-6">
      <% if (order && order.status.toLowerCase() === "paid") { %>
        Your payment has been successfully processed.
      <% } else { %>
        Your order has been placed successfully.
      <% } %>
    </p>

    <!-- Order Summary -->
    <% if (order) { %>
      <div class="bg-gray-50 rounded-lg px-4 py-4 mb-6">
        <div class="text-center mb-3">
          <span class="block text-xs text-gray-500">Total Payment</span>
          <span class="text-2xl font-bold text-gray-800">
            â‚¹<span id="totalAmount"><%= order.totalAmount.toFixed(2) %></span>
          </span>
        </div>
        <div class="border-b border-gray-200 mb-3"></div>
        <div class="grid grid-cols-1 gap-y-2 text-left text-sm text-gray-700">
          <div class="flex justify-between">
            <span class="font-medium">Ref Number</span>
            <span id="orderId"><%= order.orderId %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-medium">Payment Time</span>
            <span>--:--</span>
          </div>
          <div class="flex justify-between">
            <span class="font-medium">Payment Method</span>
            <span><%= order.paymentMode %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-medium">Sender Name</span>
            <span><%= order.customerName %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-medium">Status</span>
            <span id="orderStatus"><%= order.status %></span>
          </div>
        </div>
      </div>

      <!-- Purchased Items (hidden by default, toggleable when status is "Paid") -->
      <div id="itemsSection" class="mb-6 text-left hidden">
        <h2 class="text-base font-semibold text-gray-700 mb-2">Purchased Items:</h2>
        <ul id="itemsList" class="list-disc list-inside text-sm text-gray-600">
          <% order.items.forEach(function(item) { %>
            <li>
              <%= item.foodItem ? item.foodItem.name : "Item" %> &mdash; Quantity: <%= item.quantity %>
            </li>
          <% }) %>
        </ul>
      </div>

      <!-- Button to Toggle Purchased Items -->
      <button id="toggleItemsBtn" class="hidden w-full bg-gray-200 text-gray-700 py-2 rounded-lg mb-4 hover:bg-gray-300 transition" onclick="toggleItems()">Show Items</button>

      <!-- PDF Receipt Link -->
      <a href="/orders/receipt/<%= order.orderId %>" class="flex items-center justify-center text-gray-600 text-sm mb-6 hover:text-gray-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none"
             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Get PDF Receipt
      </a>
    <% } else { %>
      <p class="text-sm text-gray-700 mb-6">Your order has been placed successfully.</p>
    <% } %>

    <!-- Done Button -->
    <a href="/dashboard" class="inline-block w-full bg-green-600 text-white text-center py-3 rounded-lg font-semibold hover:bg-green-700 transition">
      Done
    </a>
  </div>
  
  <script>
    <% if (order) { %>
      const orderId = "<%= order.orderId %>";

      // Poll every 5 seconds to check for payment update.
      async function fetchOrderStatus() {
        try {
          const res = await fetch(`/orders/details/${encodeURIComponent(orderId)}`);
          const data = await res.json();
          if (data.success && data.order) {
            document.getElementById("orderStatus").innerText = data.order.status;
            // If status is 'Paid', update header and show toggle button.
            if (data.order.status.toLowerCase() === "paid") {
              document.getElementById("headerMsg").innerText = "Payment Successful!";
              document.getElementById("toggleItemsBtn").classList.remove("hidden");
            }
          }
        } catch (error) {
          console.error("Error fetching order status:", error);
        }
      }
      setInterval(fetchOrderStatus, 5000);

      function toggleItems() {
        const itemsSection = document.getElementById("itemsSection");
        const toggleBtn = document.getElementById("toggleItemsBtn");
        if (itemsSection.classList.contains("hidden")) {
          itemsSection.classList.remove("hidden");
          toggleBtn.innerText = "Hide Items";
        } else {
          itemsSection.classList.add("hidden");
          toggleBtn.innerText = "Show Items";
        }
      }
    <% } %>
  </script>
</body>
</html>
